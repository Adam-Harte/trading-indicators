{
  "name": "trade-indicators-js",
  "version": "0.0.0-development",
  "description": "package for calculating trading indicators",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts --ignore-pattern node_modules/",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write \"src/**/*.{ts,json}\"",
    "prettier:check": "prettier --check \"src/**/*.{ts,json}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "prepare": "husky install",
    "semantic-release": "semantic-release --branches main"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Adam-Harte/trading-indicators.git"
  },
  "author": "Adam Harte",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Adam-Harte/trading-indicators/issues"
  },
  "homepage": "https://github.com/Adam-Harte/trading-indicators#readme",
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "semantic-release": "^19.0.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "round-to": "^6.0.0"
  },
  "lint-staged": {
    "src/**/*.test.ts": [
      "npm run test"
    ],
    "src/**/*.ts": [
      "npm run lint",
      "npm run prettier"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
